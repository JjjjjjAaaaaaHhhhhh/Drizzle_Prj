<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/login_id">

    <TextView
        android:id="@+id/drizzle"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="75.5dp"
        android:layout_marginEnd="75.5dp"
        android:gravity="center_horizontal|top"
        android:text="@string/drizzle"
        android:textSize="47dp"
        android:textStyle="bold"
        android:textAppearance="@style/drizzle_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/idText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="320dp"
            android:hint="아이디를 입력해주세요"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/round_button"
        android:textSize="15dp"
        android:text="로그인" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:textSize="13dp"
        android:layout_marginTop="425dp"
        android:text="회원가입 하기"
        android:id="@+id/joinButton"/>

</RelativeLayout>